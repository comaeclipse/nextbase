// Prisma schema for the veterans destinations database. Update models as product requirements evolve.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Destination {
  id               String   @id
  name             String
  state            String
  region           String
  climate          String[]
  taxBand          String
  costOfLivingIndex Int
  lifestyle        String[]
  techPresence     String
  gunLaws          String
  vaResourcesScore Int
  healthcareIndex  Int
  summary          String   @db.Text
  highlights       String[]
  heroImage        String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([region])
  @@index([taxBand])
  @@index([techPresence])
}
